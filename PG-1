package javaProgramming;
import java.util.Scanner;

public class Calc {
    static int count = 0; // static variable to count objects
    int num1, num2;       // instance variables
    char choice;

    Calc(int a, int b) {
        this.num1 = a;
        this.num2 = b;
        count++;
    }

    public static void main(String args[]) {
    	System.out.println("Calculator Progam");
        Scanner sc = new Scanner(System.in);

        int a, b;
        char choice;

        while (true) {
            System.out.print("\nEnter first number: ");
            a = sc.nextInt();
            System.out.print("Enter second number: ");
            b = sc.nextInt();

            Calc obj = new Calc(a, b);

            System.out.println("\nPress + for Addition");
            System.out.println("Press - for Subtraction");
            System.out.println("Press * for Multiplication");
            System.out.println("Press / for Division");
            System.out.println("Press q to Quit");

            System.out.print("Enter Your Choice: ");
            choice = sc.next().charAt(0);

            if (choice == 'q' || choice == 'Q') {
                System.out.println("\nProgram Terminated.");
                break;
            }

            switch (choice) {
                case '+':
                	int sum= obj.num1+obj.num2;
                    System.out.println("Addition= " + sum);
                    break;

                case '-':
                	int diff= obj.num1-obj.num2;
                    System.out.println("Subtraction= " + diff);
                    break;

                case '*':
                	int multi= obj.num1*obj.num2;
                    System.out.println("Multiplication= " + multi);
                    break;

                case '/':
                    if (obj.num2 == 0)
                        System.out.println("Cannot divide by 0");
                    else
                        System.out.println("Division = " + ((float) (obj.num1 / obj.num2)));
                    break;

                default:
                    System.out.println("Invalid input");
            }
        }

        sc.close();
        System.out.println("\nTotal objects created = " + count);
    }
}
